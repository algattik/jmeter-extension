{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "750ff244-e115-4a23-915d-633d7d08723a",
  "name": "JMeterInstaller",
  "friendlyName": "JMeter tool installer",
  "description": "Find in cache or download a specific version of JMeter and prepend it to the PATH",
  "author": "Alexandre Gattiker",
  "helpMarkDown": "[Learn more about this task](https://aka.ms/custom-jmeter-tasks)",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 1584546141
  },
  "instanceNameFormat": "Install JMeter $(jmeterVersion)",
  "inputs": [
    {
      "name": "jmeterVersion",
      "type": "string",
      "label": "Version",
      "defaultValue": "5.2.1",
      "required": true,
      "helpMarkDown": "The version of JMeter which should be installed on the agent if not already present"
    },
    {
      "name": "plugins",
      "type": "string",
      "label": "Plugins",
      "required": false,
      "helpMarkDown": "Optional list of JMeter plugins to install, e.g. `jpgc-fifo,jpgc-json=2.2`"
    }
  ],
  "execution": {
    "Node10": {
      "target": "src/index.js"
    }
  },
  "messages": {
    "VerifyJMeterInstallation": "ms-resource:loc.messages.VerifyJMeterInstallation",
    "InputVersionNotValidVersion": "ms-resource:loc.messages.InputVersionNotValidVersion",
    "JMeterNotFoundInFolder": "ms-resource:loc.messages.JMeterNotFoundInFolder",
    "JMeterDownloadFailed": "ms-resource:loc.messages.JMeterDownloadFailed",
    "JMeterUtilityDownloadFailed": "ms-resource:loc.messages.JMeterUtilityDownloadFailed",
    "JMeterPluginManagerInstallFailed": "ms-resource:loc.messages.JMeterPluginManagerInstallFailed",
    "JMeterPluginInstallFailed": "ms-resource:loc.messages.JMeterPluginInstallFailed"
  },
  "OutputVariables": [
    {
      "name": "JMeterHome",
      "description": "The directory in which JMeter is installed."
    },
    {
      "name": "JMeterPath",
      "description": "The path to the JMeter executable."
    },
    {
      "name": "JMeterVersion",
      "description": "The JMeter version."
    }
  ]
}
